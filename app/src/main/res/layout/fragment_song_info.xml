                        android:id="@+id/saveSongTextView"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"/>

