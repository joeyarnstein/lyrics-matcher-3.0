                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="italic"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="1dp" />
            </LinearLayout>



            <RelativeLayout
